# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Configuration
LLM_PROVIDER=openai  # Options: openai, anthropic, local
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Agent Configuration
CHILD_AGENT_MAX_RETRIES=3
PARENT_AGENT_MONITORING_INTERVAL=5
RESOURCE_AGENT_CHECK_INTERVAL=10

# Resource Limits
MAX_CPU_PERCENT=80
MAX_MEMORY_PERCENT=75
MAX_DISK_PERCENT=90

# Knowledge Base
VECTOR_DB_PATH=./data/vector_db
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Web Scraping
SCRAPER_USER_AGENT=MAY-Bot/1.0
SCRAPER_RATE_LIMIT=1  # requests per second
SCRAPER_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/may.log

# Security
ENABLE_SAFETY_CHECKS=true
REQUIRE_CONFIRMATION=true
